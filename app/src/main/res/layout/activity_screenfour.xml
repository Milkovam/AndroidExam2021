<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScreenFourActivity"

    >

    <Button
        android:id="@+id/buttonBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginStart="90dp"
        android:text="@string/buy" />

    <Button
        android:id="@+id/buttonSell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginStart="200dp"
        android:text="@string/sell" />


    <TextView
        android:id="@+id/priceText"
        android:layout_width="214dp"
        android:layout_height="44dp"
        android:layout_below="@+id/cryptoDescription"
        android:layout_alignEnd="@+id/cryptoDescription"
        android:layout_alignBottom="@+id/symbolImg"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginBottom="-21dp"
        android:text="TextView"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:id="@+id/symbolImg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <TextView

        android:id="@+id/cryptoDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="30dp"
        android:text="@string/hardcoded_text"
        android:textColor="@android:color/black"
        android:textSize="30sp" />


    <FrameLayout

        android:id="@+id/fragment_container_transaction"
        android:layout_marginTop="160dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_back">


    <TextView
        android:text="@string/youhave"
        android:layout_height="300dp"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_marginStart="50dp"
        android:textColor="@color/black">
    </TextView>




    </FrameLayout>



</RelativeLayout>