<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScreenFourActivity">

    <TextView
        android:id="@+id/priceText"
        android:layout_width="214dp"
        android:layout_height="44dp"
        android:layout_below="@+id/cryptoDescription"
        android:layout_alignEnd="@+id/cryptoDescription"
        android:layout_alignBottom="@+id/symbolImg"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginBottom="-21dp"
        android:text="TextView"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/symbolImg"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>

    <TextView

        android:id="@+id/cryptoDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="30dp"
        android:text="@string/hardcoded_text"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <FrameLayout
        android:layout_marginTop="30dp"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/priceText">

    </FrameLayout>

</RelativeLayout>